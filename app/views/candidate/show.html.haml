.row.clearfix
  .col-md-12.column
.row.clearfix
  .col-md-8.column
  .col-md-4.column
.row.clearfix
  .col-md-1.column
  .col-md-3.column
    %img.img-circle{:alt => "140x140",:style => 'width:140px; height:140px', :src => @candidate.pic_url}
  .col-md-8.column
    %p
      = @candidate.name
    %p      
      = @candidate.overview
.row.clearfix
  .col-md-12.column
    %h3
      Commitments made for upcoming election
    %table.table.table-striped
      %thead
        %tr
          %th
            Commitment
          %th
            Description
          %th
            Facebook Support
          %th
            Twitter Support
      %tbody
        - @candidate.standpoints.each do |standpoint|
          %tr
            %td.col-md-3
              = standpoint.name
            %td.col-md-7
              = standpoint.description
            %td.col-md-2.text-center
              = render_shareable :buttons=> ['facebook']
            %td.col-md-2.text-center
              = render_shareable :buttons=> ['twitter']
.row.clearfix
  .col-md-12.column
    %h3
      Previous Commitments
    %table.table.table-striped
      %thead
        %tr
          %th
            Committment
          %th
            Description
          %th.text-right
            Status
          %th
            Facebook Support
          %th
            Twitter Support
      %tbody
        - @candidate.standpoints.each do |standpoint|
        - x = (rand(10) > 0.5)
          %tr.success{:class => ("danger" unless x)}
            %td.col-md-3
              = standpoint.name
            %td.col-md-5
              = standpoint.description
            %td.col-md-2.text-right
              = (x)? 'Delivered' : 'Did not Deliver'
            %td.col-md-2.text-center
              = render_shareable :buttons=> ['facebook']
            %td.col-md-2.text-center
              = render_shareable :buttons=> ['twitter']